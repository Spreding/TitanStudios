{% extends 'base.html.twig' %}

{% block title %}Réalisation
{% endblock %}
{% block titleHeader %}Réalisation
{% endblock %}


{% block body %}
	<div class="row ">
		<div class="carouselContainer col-12 col-md-9">
			<div
				id="demo" class="carousel slide  carouselContainer" data-ride="carousel">
				<!-- Indicators -->
				<ul class="carousel-indicators">
					<li data-target="#demo" data-slide-to="0" class="active"></li>
					<li data-target="#demo" data-slide-to="1"></li>
					<li data-target="#demo" data-slide-to="2"></li>
					<li data-target="#demo" data-slide-to="3"></li>
				</ul>
				<!-- The slideshow -->
				<div class="carousel-inner isNotModal">
					<div class="carousel-item active">
						<img class="d-block w-100" src="/uploads/{{real.image1}}">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="/uploads/{{real.image2}}">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="/uploads/{{real.image3}}">
					</div>
					<div class="carousel-item">
						<img class="d-block w-100" src="/uploads/{{real.image4}}">
					</div>
				</div>
				<!-- Left and right controls -->
				<a class="carousel-control-prev" href="#demo" data-slide="prev">
					<span class="carousel-control-prev-icon"></span>
				</a>
				<a class="carousel-control-next" href="#demo" data-slide="next">
					<span class="carousel-control-next-icon"></span>
				</a>
			</div>

		</div>
	</div>

	{# Text real #}
	<p class="txtActu">{{real.text}}</p>

	{# Links real #}
	<table class="table table-striped">
		<thead class="tableHead">
			<tr>
				<th scope="col" class="bordered">Plateforme</th>
				<th scope="col">Liens</th>
			</tr>
		</thead>
		<tbody>
			{% for link in links %}

				{% if link.link != '' and link.nameLink != '' %}
					<tr>

						<td class="platformReal">{{link.nameLink}}
						</td>
						<td class="lienReal">
							<a class"lienreal" href="{{link.link}}" target="_blank" rel="noopener noreferrer">{{link.link}}</a>
						</td>
					</tr>
				{% endif %}


			{% endfor %}
		</tbody>
	</table>
{% endblock %}
