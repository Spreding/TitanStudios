                {% set iteration = 0 %}
                {% for real in reals %}
                  {% set iteration = iteration +1 %}
                {# Chaque objets réalisations #}
                {% if iteration > 1 %}
                <hr>
                {% endif %}
                
                
                <div class="realisation row" id="realisation{{real.id}}">
                  <div class="img-realisation col-12 col-md-6 row" data-toggle="modal" data-target="#Modal{{real.id}}">
                    <img src="/uploads/{{real.image1}}" class="col-8 img-principal cursorPointer" data-target="#carousel{{real.id}}" data-slide-to="0"/>

                    <div class="imgSecondaireContenaire col-3" >
                      <img src="/uploads/{{real.image2}}" class="img-secondaire img-top cursorPointer" data-target="#carousel{{real.id}}" data-slide-to="1">
                      <img src="/uploads/{{real.image3}}" class="img-secondaire img-mid cursorPointer" data-target="#carousel{{real.id}}" data-slide-to="2">
                      <img src="/uploads/{{real.image4}}" class="img-secondaire img-bot cursorPointer" data-target="#carousel{{real.id}}" data-slide-to="3">
                    </div> 
                  </div>
                  <div class="txt-realisation col-12 col-md-6">
                    <div class="titreReal">{{real.title}}</div>
                    <div class="txtReal">{{real.description}}</div>
                    <div class="infoReal"> 
                      <a href="{{path('realisation', {slug : real.slug})}}">
                      <button type="button" href="{{path('realisation', {slug : real.slug})}}" class="btn btn-primary btnReal">En savoir plus</button>
                      </a> 
                    </div> 
                  </div> 
                </div>

                {# Chaque modal d'image #}

                
        <div class="modal fade" id="Modal{{real.id}}" tabindex="-1" role="dialog" aria-hidden="true">
          <div class="modal-dialog" role="document"> <div class="modal-content"> <div class="modal-body">
            <div id="carousel{{real.id}}" class="carousel slide" data-ride="carousel">
              <ol class="carousel-indicators">
                <li data-target="#carousel{{real.id}}" data-slide-to="0" class="active"></li>
                <li data-target="#carousel{{real.id}}" data-slide-to="1"></li>
                <li data-target="#carousel{{real.id}}" data-slide-to="2"></li>
                <li data-target="#carousel{{real.id}}" data-slide-to="3"></li>
              </ol>
              <div class="carousel-inner isModal">
                <div class="carousel-item active">
                  <img class="d-block w-100" src="/uploads/{{real.image1}}" alt="First slide" height="250px">
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/uploads/{{real.image2}}" alt="Second slide" height="250px">
                  </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/uploads/{{real.image3}}" alt="Third slide" height="250px" >
                </div>
                <div class="carousel-item">
                  <img class="d-block w-100" src="/uploads/{{real.image4}}" alt="Fourth slide" height="250px">
                </div>
              </div>
              <a class="carousel-control-prev" href="#carousel{{real.id}}" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
              </a>
              <a class="carousel-control-next" href="#carousel{{real.id}}" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
              </a>
            </div>
          </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
