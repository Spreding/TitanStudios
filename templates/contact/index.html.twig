{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block titleHeader %}Contact{% endblock %}
{% block js %}
    <link rel="stylesheet" href="{{ asset('assets/css/styleContact.css') }}">
{% endblock %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-info alert-dismissible fade show mb-0" role="alert">
            <strong>{{ message }}</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <div class="contactMain">
        <div class="coordonneContact">
            <h2 class="mt-3">Vous pouvez nous contacter :</h2>
            <div class="textContact row">
                <ul>
                    <li>
                        Par téléphone
                        <ul>
                            <li>06 78 43 52 04</li>
                            <li>06 12 48 61 41</li>
                        </ul>
                    </li>
                    <li>Par mail</li>
                    <ul>
                        <li><a href="mailto:stud.titan@gmail.com">stud.titan@gmail.com</a></li>
                        <li><a href="mailto:contact@titanstudios.fr">contact@titanstudios.fr</a></li>
                    </ul>
                </ul>
            </div>
        </div>

        <div class="formContact">
            <div class="row">

                <div class="col-lg-12 ">
                    <h2 class="titleForm">Ou vous pouvez remplir ce formulaire</h2>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-4">{{ form_row(form.firstname) }}</div>
                        <div class="col-md-4">{{ form_row(form.lastname) }}</div>
                        <div class="col-md-4">{{ form_row(form.phone) }}</div>
                        <div class="col-md-8">{{ form_row(form.email) }}</div>
                        <div class="col-md-4">{{ form_row(form.categorie) }}</div>
                        <div class="col-md-12">{{ form_row(form.texte) }}</div>
                        <div class="col-md-12">{{ form_row(form.submit) }}</div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>

    </div>

{% endblock %}
