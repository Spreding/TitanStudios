{% extends 'admin.html.twig' %}

{% block title %}Administration-RÃ©alisations{% endblock %}

{% block header %}{% include "admin/header.html.twig" %}{% endblock %}

{% block body %}

  <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">categorie</th>
      <th scope="col">type</th>
      <th scope="col">titre</th>
      <th scope="col">slug</th>
      <th scope="col">texte</th>
      <th scope="col">description</th>
      <th scope="col">imagePrincipale</th>
      <th scope="col">imageSecondaire1</th>
      <th scope="col">imageSecondaire2</th>
      <th scope="col">imageSecondaire3</th>
      <th scope="col">highlight</th>
      <th scope="col"><a href="{{path('admin_add_real')}}"><button type="button" class="btn btn-success" >add</button></a></th>
    </tr>
  </thead>
  <tbody>
  {% for real in Reals %}
    <tr class="borderTop">
      <th scope="row">{{real.id}}</th>
      <td>{{real.categorie}}</td>
      <td>{{real.type}}</td>
      <td>{{real.title}}</td>
      <td>{{real.slug}}</td>
      <td>{{real.text}}</td>
      <td>{{real.description}}</td>
      <td>{{real.image1}} <br> <img src="\uploads\{{real.image1}}" class="img-fluid img-show"></td>
      <td>{{real.image2}} <br> <img src="\uploads\{{real.image2}}" class="img-fluid img-show"></td>
      <td>{{real.image3}} <br> <img src="\uploads\{{real.image3}}" class="img-fluid img-show"></td>
      <td>{{real.image4}} <br> <img src="\uploads\{{real.image4}}" class="img-fluid img-show"></td>
      <td>{% if real.highlight %}Oui{% else %}Non{% endif %}</td>
      <td rowspan="2"><a href="<?php echo 'index.php?id='. $real['id'].'&action=modify&type=real'; ?>"><button type="button" class="btn btn-warning" >modif</button></a><a href="<?php echo 'index.php?id='. $real['id'].'&action=delete&type=real'; ?>"><button type="button" class="btn btn-danger" >suppr</button></a></td>
    </tr>

<tr>
<th scope="row">Liens</th>
    {% for link in Links %}
  
    {% if link.realisation == real %}
        <td >{{link.nameLink}}</td>
        <td ><a href="{{link.link}}">{{link.link}}</a></td>
    {% endif %}

  {% endfor %}
  </tr>

  {% endfor %}

  </tbody>
</table>
{% endblock %}